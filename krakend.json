{
  "$schema": "http://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    }
  },
  "output_encoding": "json",
  "name": "BarManagementAPI",
  "port": 8081,
  "endpoints": [
    {
      "endpoint": "/bar_sale/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/bar_sale/{id}",
          "encoding": "json",
          "method": "GET",
          "host": ["http://flask_app_container:5000"],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/inventory_mutation",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/inventory_mutation",
          "encoding": "json",
          "method": "POST",
          "host": ["http://flask_app_container:5000"],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}
