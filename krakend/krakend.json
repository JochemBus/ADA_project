{
    "$schema": "http://www.krakend.io/schema/v3.json",
    "version": 3,
    "extra_config": {
          "telemetry/logging": {
            "level": "DEBUG",
            "prefix": "[KRAKEND]",
            "syslog": false,
            "stdout": true
          }
      },
    "output_encoding": "json",
    "name": "barsaleapi",
    "port": 8081,
    "timeout": "10000ms",
    "endpoints": [
      {
        "endpoint": "/bar_sale/{id}",
        "method": "GET",
        "output_encoding": "json",
        "input_headers": [
          "Authorization"
          ],
        "extra_config": {
          "auth/validator": {
            "alg": "RS256",
            "jwk_url": "http://keycloak:8080/realms/adaproject/protocol/openid-connect/certs",
            "disable_jwk_security": true
          } 
        },
        "backend": [
          {
            "url_pattern": "/bar_sale/{id}",
            "encoding": "json",
            "method": "GET",
            "host": [
              "http://bar_service_ct:5000/"
            ],
            "disable_host_sanitize": false
          }
        ]
      },
      {
        "endpoint": "/bar_sale/",
        "method": "POST",
        "output_encoding": "json",
        "input_headers": [
          "Content-Type",
          "Authorization"
          ],
        "extra_config": {
          "auth/validator": {
            "alg": "RS256",
            "jwk_url": "http://keycloak:8080/realms/adaproject/protocol/openid-connect/certs",
            "disable_jwk_security": true
          } 
        },
        "backend": [
          {
            "url_pattern": "/bar_sale",
            "encoding": "json",
            "method": "POST",
            "host": [
              "http://bar_service_ct:5000/"
            ],
            "disable_host_sanitize": false,
            "mapping": {
              "product_type": "type"
            }
          }
        ]
      }
    ]
  }
